@model IEnumerable<WebStoreMVC.Models.Game>

<div class="container pt-15">
    <div class="col-md-4 mt-2">
        <table class="table">
            <tr>
                <th><h3>Manage Games</h3></th>
                <th><a class="btn btn-secondary" " href="/Game/Add">Add more games ⬈</a></th>
            </tr>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Publisher</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Publisher</td>
                            <td>@item.UnitPrice $</td>
                            <td>
                                <a class="btn btn-success" href="/Game/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Game/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>