@model WebStoreMVC.Models.Game

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Edit game information</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" class="form-control" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreID">Genre</label>
                    <select class="form-control" asp-for="GenreID" asp-items="Model.GenreList">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="GenreID" class="text-danger"></span>
                </div>
@*                <div class="form-group">
                    <label asp-for="PublisherID">Publisher</label>
                    <select class="form-control" asp-for="PublisherID" asp-items="Model.PublisherList">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="PublisherID" class="text-danger"></span>
                </div>*@

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button class="btn btn-success" type="submit"><i class="bi bi-save"></i> Save</button>
                    <a href="/Game/GetAll" class="btn btn-secondary"><i class="bi bi-list"></i> Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>