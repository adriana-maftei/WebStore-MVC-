@model IEnumerable<WebStoreMVC.Models.Genre>

<div class="container pt-15">
    <div class="col-md-4 mt-2">
        <table class="table">
            <tr>
                <th><h3>Manage Genres</h3></th>
                <th><a class="btn btn-secondary" href="/Genre/Add">Add more genres ⬈</a></th>
            </tr>
        </table>
    </div>
    <div class="row">
        <div class="col-md-4">
            <table class="table table-bordered">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.GenreName</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
