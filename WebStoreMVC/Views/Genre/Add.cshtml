@model WebStoreMVC.Models.Genre

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add genre</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="GenreName">Genre Name</label>
                    <input type="text" class="form-control" asp-for="GenreName" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button class="btn btn-success" type="submit"><i class="bi bi-save"></i> Save</button>
                    <a href="/Genre/GetAll" class="btn btn-secondary"><i class="bi bi-list"></i> Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>